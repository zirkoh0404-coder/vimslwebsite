<%- include('partials/navbar') %>

<main class="py-20 px-6 max-w-6xl mx-auto min-h-screen bg-black text-white">
    <div class="text-center mb-20 mt-10">
        <h2 class="text-6xl md:text-8xl font-black italic uppercase tracking-tighter mb-4">MATCH <span class="text-blue-500">CENTER</span></h2>
        <p class="text-[10px] font-bold tracking-[0.5em] opacity-40 uppercase">Broadcasts & Schedule</p>
    </div>

    <% if(liveLink && liveLink.trim() !== "") { %>
        <% 
            // YouTube Link Fixer Logic
            let embedLink = liveLink;
            if (liveLink.includes('watch?v=')) {
                embedLink = liveLink.replace('watch?v=', 'embed/').split('&')[0];
            } else if (liveLink.includes('youtu.be/')) {
                embedLink = liveLink.replace('youtu.be/', 'youtube.com/embed/').split('?')[0];
            }
        %>
        <div class="glass p-2 rounded-[40px] border border-white/10 mb-20 shadow-[0_0_60px_rgba(59,130,246,0.15)]">
            <div class="aspect-video w-full rounded-[35px] overflow-hidden bg-zinc-900">
                <iframe 
                    class="w-full h-full" 
                    src="<%= embedLink %>" 
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                    allowfullscreen>
                </iframe>
            </div>
            <div class="py-5 px-10 flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-red-600 rounded-full animate-ping"></div>
                    <span class="text-[10px] font-black uppercase tracking-[0.3em] text-red-500">Live Match Broadcast</span>
                </div>
                <span class="text-[10px] font-bold opacity-40 uppercase tracking-widest">Official VIM Stream</span>
            </div>
        </div>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% if(matches && matches.length > 0) { %>
            <% matches.forEach(m => { %>
                <div class="glass p-10 rounded-[40px] border border-white/5 relative overflow-hidden group hover:border-blue-500/30 transition-all duration-500">
                    <div class="flex justify-between items-center relative z-10">
                        <div class="text-center w-1/3">
                            <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center">
                                <img src="<%= m.logoA %>" class="max-w-full max-h-full object-contain group-hover:scale-110 transition-transform duration-700">
                            </div>
                            <h4 class="font-black uppercase text-[11px] tracking-wider text-white"><%= m.teamA %></h4>
                        </div>

                        <div class="text-center">
                            <% if(m.isLive) { %>
                                <div class="mb-2">
                                    <span class="bg-red-600 text-[9px] font-black px-4 py-1 rounded-full uppercase tracking-tighter animate-pulse shadow-[0_0_15px_rgba(220,38,38,0.5)]">Live</span>
                                </div>
                            <% } else { %>
                                <span class="text-blue-500 font-black italic text-3xl tracking-tighter">VS</span>
                            <% } %>
                            <p class="text-[10px] opacity-40 mt-3 font-black tracking-widest uppercase"><%= m.time %></p>
                        </div>

                        <div class="text-center w-1/3">
                            <div class="w-20 h-20 mx-auto mb-4 flex items-center justify-center">
                                <img src="<%= m.logoB %>" class="max-w-full max-h-full object-contain group-hover:scale-110 transition-transform duration-700">
                            </div>
                            <h4 class="font-black uppercase text-[11px] tracking-wider text-white"><%= m.teamB %></h4>
                        </div>
                    </div>
                    <div class="absolute inset-0 bg-gradient-to-br from-blue-600/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="md:col-span-2 text-center py-32 glass rounded-[40px] border border-white/5">
                <p class="opacity-20 italic uppercase tracking-[0.5em] text-sm font-black">No matches currently scheduled</p>
            </div>
        <% } %>
    </div>
</main>