<%- include('partials/navbar') %>
<main class="max-w-6xl mx-auto px-10 py-24 text-white min-h-screen">
    <a href="javascript:history.back()" class="text-blue-500 text-[10px] font-black uppercase tracking-[0.4em] mb-16 block">‚Üê Back</a>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center mb-20">
        <div class="glass p-4 rounded-[40px] border border-white/10 shadow-2xl">
            <img src="<%= player.image %>" class="w-full aspect-square object-cover rounded-[30px]">
        </div>

        <div>
            <h1 class="text-7xl font-black italic uppercase tracking-tighter mb-4"><%= player.name %></h1>
            <p class="text-blue-500 font-bold uppercase tracking-[0.4em] text-xs mb-8">Official Player Registry</p>
            
            <div class="bg-white/5 p-6 rounded-3xl border border-white/5 mb-8">
                <p class="text-[10px] opacity-40 uppercase mb-1 tracking-widest">Discord</p>
                <p class="font-black italic text-xl text-blue-300"><%= player.discord %></p>
            </div>

            <div class="glass p-8 rounded-3xl border border-white/5">
                <h3 class="text-blue-500 text-[10px] font-black uppercase mb-4 tracking-widest">Bio & History</h3>
                <p class="text-lg italic opacity-80 leading-relaxed"><%= player.experience %></p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="glass p-10 text-center rounded-[40px] border border-white/5">
            <p class="opacity-40 text-[10px] font-black uppercase mb-2">Goals</p>
            <p class="text-5xl font-black italic"><%= player.goals || 0 %></p>
        </div>
        <div class="glass p-10 text-center rounded-[40px] border border-white/5">
            <p class="opacity-40 text-[10px] font-black uppercase mb-2">Assists</p>
            <p class="text-5xl font-black italic"><%= player.assists || 0 %></p>
        </div>
        <div class="glass p-10 text-center rounded-[40px] border border-white/5">
            <p class="opacity-40 text-[10px] font-black uppercase mb-2">Saves</p>
            <p class="text-5xl font-black italic"><%= player.saves || 0 %></p>
        </div>
        <div class="bg-blue-600/10 p-10 text-center rounded-[40px] border border-blue-500/30">
            <p class="text-blue-500 text-[10px] font-black uppercase mb-2">MVPs</p>
            <p class="text-5xl font-black italic text-blue-500"><%= player.mvps || 0 %></p>
        </div>
    </div>
</main>