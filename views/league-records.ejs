<%- include('partials/navbar') %>
<main class="py-20 px-6 max-w-7xl mx-auto">
    <div class="text-center mb-20">
        <h1 class="text-7xl font-black italic uppercase tracking-tighter mb-2">LEAGUE <span class="text-blue-500">RECORDS</span></h1>
        <p class="text-[10px] font-bold uppercase tracking-[0.5em] opacity-40">VIM Super League Hall of Fame</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% if (records && records.length > 0) { %>
            <% records.forEach(record => { %>
                <div class="glass p-8 rounded-[40px] border border-white/5 hover:border-blue-500/30 transition-all">
                    <div class="bg-blue-600/10 w-12 h-12 flex items-center justify-center rounded-2xl mb-6 text-xl">üèÜ</div>
                    <h3 class="text-xl font-black uppercase italic mb-1"><%= record.title %></h3>
                    <p class="text-blue-500 font-bold text-sm mb-4">Held by: <%= record.holder %></p>
                    <p class="text-white/40 text-xs leading-relaxed"><%= record.description %></p>
                    <p class="mt-4 text-[9px] font-black uppercase tracking-widest opacity-20"><%= record.date %></p>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-span-full py-20 text-center opacity-20 font-bold uppercase tracking-widest">No records found</div>
        <% } %>
    </div>
</main>
