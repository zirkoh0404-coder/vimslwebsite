<%- include('partials/navbar') %>

<style>
    body { background-color: #030303; color: #fff; font-family: 'Inter', sans-serif; overflow-x: hidden; }
    
    /* Ultra-Glass Styling */
    .glass-card { 
        background: rgba(255, 255, 255, 0.02);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 2.5rem;
        transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .glass-card:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(59, 130, 246, 0.4);
        transform: scale(1.02);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5);
    }

    /* Animated Ambient Glows */
    .bg-glow {
        position: fixed;
        width: 600px;
        height: 600px;
        background: radial-gradient(circle, rgba(59, 130, 246, 0.08) 0%, transparent 70%);
        top: -100px;
        right: -100px;
        z-index: -1;
        pointer-events: none;
    }

    .bg-glow-2 {
        position: fixed;
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, rgba(37, 99, 235, 0.05) 0%, transparent 70%);
        bottom: -100px;
        left: -100px;
        z-index: -1;
        pointer-events: none;
    }
</style>

<div class="bg-glow"></div>
<div class="bg-glow-2"></div>

<main class="relative pt-32 pb-32">
    
    <div class="max-w-7xl mx-auto px-10 text-center mb-32">
        <div class="flex flex-col items-center mb-10">
             <span class="text-blue-500 text-[10px] font-black uppercase tracking-[0.6em] mb-6">
                A NEW STANDARD OF LEAGUES IS HERE ~ VIM
             </span>
             
             <h1 class="text-7xl md:text-[10rem] font-black tracking-tighter italic uppercase leading-[0.85] mb-8">
                YOU CHOOSE <span class="text-blue-600 drop-shadow-[0_0_30px_rgba(37,99,235,0.4)]">US!</span>
             </h1>

             <p class="max-w-2xl text-white/50 text-sm md:text-base leading-relaxed font-medium mb-12 uppercase tracking-wider">
                Welcome to a community built on passion and elite competition. Whether you are a rising star or a seasoned veteran, we are honored to provide the stage for your journey. Together, we redefine the beautiful game.
             </p>
        </div>

        <div class="relative max-w-6xl mx-auto group">
            <div class="absolute -inset-1 bg-blue-600 rounded-[45px] blur opacity-10 group-hover:opacity-25 transition duration-1000"></div>
            <div class="relative glass-card p-3 shadow-2xl overflow-hidden">
                <img src="https://media.discordapp.net/attachments/1368138826337357865/1369672207814627358/vimgfx.png?ex=694c97e5&is=694b4665&hm=6bbfe5fa903d0189d3dd93e80db8c5174ec6858bf50e6224f1ab9c7e1938af64&=&format=webp&quality=lossless" 
                     class="w-full h-auto rounded-[35px] transform transition duration-1000 group-hover:scale-[1.01]">
            </div>
        </div>
    </div>

    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8 px-10 mb-48">
        <div class="glass-card p-12 text-center group">
            <h4 class="text-white font-black text-6xl mb-3 tracking-tighter transition-all group-hover:text-blue-500"><%= players.length %></h4>
            <p class="text-[10px] uppercase tracking-[0.4em] opacity-40 font-bold">Registered Agents</p>
        </div>
        <div class="glass-card p-12 text-center border-blue-600/20 group">
            <h4 class="text-white font-black text-6xl mb-3 tracking-tighter transition-all group-hover:text-blue-500"><%= matches.length %></h4>
            <p class="text-[10px] uppercase tracking-[0.4em] opacity-40 font-bold">Scheduled Games</p>
        </div>

        <div class="glass-card p-12 text-center group">
            <% if(liveLink && liveLink.trim() !== "") { %>
                <div class="flex items-center justify-center gap-4 mb-3">
                    <div class="w-3 h-3 bg-red-600 rounded-full animate-pulse shadow-[0_0_15px_rgba(220,38,38,0.8)]"></div>
                    <h4 class="text-white font-black text-6xl tracking-tighter">LIVE</h4>
                </div>
                <p class="text-[10px] uppercase tracking-[0.4em] opacity-40 font-bold text-red-500">Broadcast Active</p>
            <% } else { %>
                <div class="flex items-center justify-center gap-4 mb-3 opacity-20">
                    <div class="w-3 h-3 bg-zinc-600 rounded-full"></div>
                    <h4 class="text-white font-black text-6xl tracking-tighter">OFFLINE</h4>
                </div>
                <p class="text-[10px] uppercase tracking-[0.4em] opacity-40 font-bold">Broadcast Center</p>
            <% } %>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-10 mb-40">
        <div class="text-center mb-20">
            <h2 class="text-5xl font-black italic uppercase mb-4">The Road to the <span class="text-blue-500">Super League</span></h2>
            <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-16 relative">
            <div class="hidden md:block absolute top-1/2 left-0 w-full h-[1px] bg-white/5 -z-10"></div>
            
            <div class="flex flex-col items-center text-center">
                <div class="w-20 h-20 rounded-2xl glass-card flex items-center justify-center font-black text-2xl mb-8 group-hover:rotate-12 transition-all">01</div>
                <h3 class="font-black italic uppercase text-lg mb-3">Recruitment</h3>
                <p class="text-sm opacity-40 leading-relaxed max-w-[250px]">Join our Discord and show your highlight reels to top-tier scouts.</p>
            </div>
            
            <div class="flex flex-col items-center text-center">
                <div class="w-20 h-20 rounded-2xl glass-card border-blue-600/40 flex items-center justify-center font-black text-2xl mb-8">02</div>
                <h3 class="font-black italic uppercase text-lg mb-3 text-blue-500">The Market</h3>
                <p class="text-sm opacity-40 leading-relaxed max-w-[250px]">Update your metrics and negotiate contracts with team managers.</p>
            </div>
            
            <div class="flex flex-col items-center text-center">
                <div class="w-20 h-20 rounded-2xl glass-card flex items-center justify-center font-black text-2xl mb-8">03</div>
                <h3 class="font-black italic uppercase text-lg mb-3">Championship</h3>
                <p class="text-sm opacity-40 leading-relaxed max-w-[250px]">Compete for the VIM Title in front of thousands of viewers.</p>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a href="/market" class="group relative inline-flex items-center gap-4 bg-white text-black px-12 py-6 rounded-full font-black text-xs uppercase tracking-[0.3em] transition-all hover:pr-16 active:scale-95">
            Enter the Hub
            <span class="absolute right-8 opacity-0 group-hover:opacity-100 transition-all text-xl">â†’</span>
        </a>
    </div>

</main>
